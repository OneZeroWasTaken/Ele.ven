<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_total_flex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/button_select_arrival"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2:45" />

    <Button
        android:id="@+id/button_select_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_time"
        app:layout_constraintBottom_toTopOf="@id/button_select_lunch"
        app:layout_constraintEnd_toStartOf="@id/text_arrival"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_total_flex" />

    <TextView
        android:id="@+id/text_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival"
        app:layout_constraintBottom_toTopOf="@id/text_lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_select_arrival"
        app:layout_constraintTop_toBottomOf="@id/text_total_flex" />

    <Button
        android:id="@+id/button_select_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_time"
        app:layout_constraintBottom_toTopOf="@id/button_select_leave"
        app:layout_constraintEnd_toStartOf="@id/text_lunch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_select_arrival" />

    <TextView
        android:id="@+id/text_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lunch"
        app:layout_constraintBottom_toTopOf="@id/text_leave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_select_lunch"
        app:layout_constraintTop_toBottomOf="@id/text_arrival" />

    <Button
        android:id="@+id/button_select_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_time"
        app:layout_constraintBottom_toTopOf="@id/layout_calculated_time_texts"
        app:layout_constraintEnd_toStartOf="@id/text_leave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_select_lunch" />

    <TextView
        android:id="@+id/text_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave"
        app:layout_constraintBottom_toTopOf="@id/layout_calculated_time_texts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_select_leave"
        app:layout_constraintTop_toBottomOf="@id/text_lunch" />

    <LinearLayout
        android:id="@+id/layout_calculated_time_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_select_leave">

        <TextView
            android:id="@+id/text_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work time: " />

        <TextView
            android:id="@+id/text_flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flex_template" />

        <Button
            android:id="@+id/button_update_flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_flex" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>